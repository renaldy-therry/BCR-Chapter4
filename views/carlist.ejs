<div class="container-fluid">
    <div class="row">
      <div class="col-lg-6">
        <h2>List Car</h2>
      </div>
      <div class="col-lg-6">
        <a href="/create" role="button" class="btn btn-primary" style="margin-left: 302px">
          <i class="bi bi-plus"></i> Add New Car
        </a>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-1">
        <a href="/" role="button" class="btn btn-outline-primary">All</a>
      </div>
      <div class="col-sm-1" style="margin-left: -20px">
        <a href="/small" role="button" class="btn btn-outline-primary">Small</a>
      </div>
      <div class="col-sm-1">
        <a href="/medium" role="button" class="btn btn-outline-primary">Medium</a>
      </div>
      <div class="col-sm-1" style="margin-left: 20px">
        <a href="/large" role="button" class="btn btn-outline-primary">Large</a>
      </div>
    </div>
    <div class="row mt-5">
      <% data.forEach(car => { %>
      <div class="col-md-4 mt-3">
        <div class="card" style="width: 18rem">
          <img
            src="cars/<%= car.image %>  "
            class="card-img-top img-fluid img-thumbnail"
            height="50"
            width="200"
          />
          <div class="card-body">
            <h5 class="card-title"><%= car.name %> / <%= car.type %></h5>
            <div class="card-text mb-3">
              <b>Rp. <%= car.price %> / hari </b>
              <br />
              <span>Size : <%= car.size %> </span>
              <br />
              <span
                ><i class="bi bi-clock"></i> Updated At <%=
                car.updatedAt.toDateString() %>
              </span>
            </div>
            <div class="d-grid gap-2 d-md-block">
              <a
                href=""
                style="margin-right: 30px"
                class="btn btn-outline-danger"
                data-bs-toggle="modal"
                data-bs-target="#exampleModalToggle<%= car.id %> "
                ><i class="bi bi-trash"></i> Delete</a
              >
              <a
                href="/update/<%= car.id %> "
                role="button"
                class="btn btn-success"
                style="padding-left: 25px; padding-right: 25px"
                ><i class="bi bi-pencil-square"></i> Edit</a
              >
            </div>
          </div>
        </div>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModalToggle<%= car.id %>"
          aria-hidden="true"
          aria-labelledby="exampleModalToggleLabel"
          tabindex="-1"
        >
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel  ">Delete</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div class="card" style="width: 18rem; margin-left: 100px">
                  <img src="/cars/<%= car.image %> " class="card-img-top" />
                  <div class="card-body">
                    <h5 class="card-title fw-bold">
                      Yakin Hapus Mobil : <%= car.name %> ?
                    </h5>
                    <p class="card-text">ID : <%= car.id %></p>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <a
                  href="/delete/<%= car.id %> "
                  class="btn btn-danger"
                  role="button"
                  >Delete Car</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  